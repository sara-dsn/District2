                            <p class="card-text ">{{ plt.description }} <br> Menu: {{ plt.prix }} â‚¬</p><br>
                        </div>
                        <div class="mt-auto  text-center"> <a href="{{ path('add',{'id':plt.id}) }}"  type="submit" value="{{ plt.id }}" class="btn  col-4 t" ><img  class="img-fluid " src="{{asset('asset/cat.fond/panierbtn.png')}}" alt="ajouter au panier"></a></div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
       
        <div class="w-100 mt-3 d-flex justify-content-center"> <a type="submit" class="btn btn-dark t my-3 " id="btnplt" href="{{path('app_accueil')}}">Retourner sur la page d'acceuil</a></div>

    </div>     
     
 
  
